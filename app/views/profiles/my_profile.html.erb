    <%if current_user.professional?  %>
      <ul class="nav nav-tabs d-flex justify-content-start" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link" id="client-tab" data-toggle="tab" href="#client" role="tab" aria-controls="client" aria-selected="true">Cliente</a>
        </li>
        <li class="nav-item">
