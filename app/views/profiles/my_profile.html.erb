    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade <%= 'show active' unless current_user.professional?  %>  " id="client" role="tabpanel" aria-labelledby="client-tab">
        <%= render "client"  %>
      </div>

      
      <% if current_user.professional? %>
        <div class="tab-pane fade show active" id="professional" role="tabpanel" aria-labelledby="professional-tab">
        
          <%= render "professional"  %>

        </div>
        <div class="tab-pane fade" id="images" role="tabpanel" aria-labelledby="images-tab">
        
          <%= render "images", profile: current_user, new_image: Image.new  %>

        </div>
      <% end %>
      
    </div>
  </div>
</div>
