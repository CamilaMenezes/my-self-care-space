
<h2>Meus agendamentos</h2>

<div class="row">
  <% current_user.orders.each do |order| %>
    <div class="col-12 col-sm-6 col-md-4 col-xl-3 mt-3">
      <div class="bg-white rounded p-3 shadow">
        <h2><%= link_to "#{order.service.name}", service_path(order.service.id) %></h2>
        <p>
          <i class="far fa-calendar"></i> <%= order.reservation.strftime("%d/%m/%Y") %> 
          <i class="far fa-clock"></i> <%= order.reservation.strftime("%H:%M") %>
        </p>
        <p>Profissional: <%= order.service.user.name %></p>
        <p>Endere√ßo: <%= order.service.user.address %></p>
        <p>Valor: <%= order.final_price %></p>
        <p>Status: <%= order.status %></p>
        <% if order.status != "Cancelado" %>
            <%= link_to "Cancelar", order_cancelation_path(order.id), method: :post %>
        <% end %>
      </div>
    </div>
  <%end %>
</div>
