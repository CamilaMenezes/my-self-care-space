<h1>Perfil Profissional</h1>

Foto

<h2>Sobre  </h2>

<%= current_user.name %>
<%= current_user.profession %>
<%= current_user.description %>
<%= current_user.address %>


<h2>Meus serviços</h2>
<%= link_to "Criar um novo serviço", new_service_path, class: "btn btn-primary"%>

<ul> 
  <% current_user.sold_services.each do |service| %>
    <li><%= link_to"#{service.name}, realizado por #{service.user.name}", service_path(service.id) %></li>
  <% end %>
</ul>



<h2>Meus agendamentos</h2>

<ul>
  <% current_user.sold_services.each do |service|  %>
    <% service.orders.each do |order| %>
      <li>
        Serviço: <%= order.service.name %>
        Cliente: <%= order.user.name %>
        Data: <%= order.reservation %>
        Valor: <%= order.final_price %>
        status: <%= order.status %>
        <% if order.status == "Em espera" %>
          <%= link_to "confirmar", order_confirmation_path(order.id), method: :post %>
        <% elsif order.status != "Cancelado" %>
          <%= link_to "Cancelar", order_cancelation_path(order.id), method: :post %>
        <% end %>

      </li>
    <% end %>
  <% end %>
</ul>
