<div class="parallax3">
  <div class="container py-4">
    <div class="bg-white rounded p-3 shadow">
      <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
          <% if @professional.photo.attached? %>
            <%= cl_image_tag @professional.photo.key, width: 120, height: 120, class: 'object-fit-cover' %>
          <% else %>
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", width: 120, height: 120, class: 'object-fit-cover' %>
          <% end %>
          <div class="pl-2">
            <h2 class='m-0'><%= @professional.name.capitalize %></h2>
            <p class='m-0'><b>Profissão:</b> <%= @professional.profession %> </p>
            <p class='m-0'><b>Endereço comercial:</b> <%= @professional.address %></p>
          </div>
        </div>
        <div class="text-center">
          <h1 class="m-0"><%= @professional.orders.count %></h1>
          <p>Agendamento(s) feitos</p>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-12 col-md-4">
          <h2>Sobre</h2>
          <p><%= @professional.description %></p>    
        </div>
        <div class="col-12 col-md-8">
          <h2> Serviços de <%= @professional.name %></h2>
          <hr>
          <div class="row">
            <% @professional.sold_services.each do |service| %>
            <div class="col-12 col-sm-6 col-lg-3 mt-3">
              <div class="bg-white rounded p-3 shadow">
                <h4><%= link_to "#{service.name}" , service_path(service.id) %></h4>
                <p>Valor: <%= service.price %></p>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>

      <h2 class="mt-3">Galeria de <%= @professional.name %></h2>
      <div class="row">
        <% @professional.images.each do |image|  %>
          <div class="col-6 col-sm-4 col-md-3">
            <div class="bg-white rounded p-3 shadow pt-3">
              <%= cl_image_tag image.photo.key, class: 'w-100' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>