<div class="parallax3">
  <div class="container h-100 d-flex justify-content-center align-items-center">
    <div class="bg-white w-100 rounded p-3 shadow text-center">
      <div class="row">
        <div class="col-12">
          <h1> <%= @service.name %></h1>
        </div>
      
      </div>
      <div class="row">
        <div class="col-12">
          <h2>Profissional: <%= link_to @service.user.name, profile_path(@service.user.id)  %></h2>
        </div> 
      </div>

      <div class="row">
        <div class="col-12">
          <p><%= @service.description %></p>
          <p>Valor: <%= @service.price %></p>
        </div> 
      </div>

      <% if current_user == @service.user %>
        <p><%= link_to "Edit", edit_service_path(@service), class: "btn btn-primary" %></p>
        <p><%= link_to "Delete", service_path(@service), method: :delete, class: "btn btn-primary" %></p>
      <% else %>
        <h2><%= link_to "Agendar esse serviço", new_service_order_path(@service.id), class: "btn btn-primary"  %></h2>  
      <% end %>
      <p><%= link_to "voltar para serviços", services_path, class: "btn btn-primary"  %></p>  
    </div>
  </div>
</div>
 

