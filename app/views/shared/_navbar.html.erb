<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <ul class="nav nav-tabs">
          <li class="nav-item">
            <%= link_to "Messages","#", class: "nav-link" %>
          </li>
        </ul>
 
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Editar perfil", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <div class="login-container mr-3">
          <%= simple_form_for(User.new, url: user_session_path, html: {class: "form-inline"}) do |f| %>
      
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "mx-2" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "password" , class: "mx-2"} %>
          <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      
          <%= f.button :submit, "Log in", class: "btn-secondary" %>
          <%= link_to "Registrar-se", new_user_registration_path, class: "btn btn-secondary"  %>
        
          <% end %>
        </div>
      <% end %>
    </ul>
  </div>
</div>
